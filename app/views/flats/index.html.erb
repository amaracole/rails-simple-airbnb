
<h2>All our Flats</h2>

<div>
  <% @flats.each do |flat| %>
  <div>
    <h4> <%= flat.name %> </h4>
    <p> <%= flat.address %> </p>
    <p> <%= flat.description %> </p>
    <p> <%= flat.number_of_guests %> </p>
    <p> <%= flat.price_per_night %> </p>
    <button >  <%= link_to "More info", flat_path(flat) %> </button>
    <button >  <%= link_to "Edit", edit_flat_path(flat) %> </button>
    <button> <%= link_to "Delete", flat_path(flat), method: :delete, data: { confirm: "Are you sure?" }%> </button>
  </div>
  <% end %>
</div>



